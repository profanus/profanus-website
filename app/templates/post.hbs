{{#paper-card class="animated fadeIn post-content" as |card|}}
  {{#if model.image}}
    {{card.image src=model.image.source alt=model.image.alt title=model.image.alt data-post-id=model.id}}
  {{/if}}
  {{#if model.title}}
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        {{#text.headline}}
          {{model.title}}
        {{/text.headline}}
      {{/title.text}}
    {{/card.title}}
  {{/if}}
  {{#card.content}}
    {{md-text text=model.content linkify=true}}
  {{/card.content}}
{{/paper-card}}