<div class="page-wrapper {{media.classNames}} {{currentRouteName}}" layout="column" tabindex="-1" role="main" flex>
  {{#paper-toolbar class=(concat "app-toolbar md-whiteframe-z1 " (if media.isXs 'md-tall'))}}
    <div class="toolbar-wrapper">
      <div class="site-logo">
        <img src="assets/img/logo.png" alt="banner" />
      </div>
      <div class="toolbar-content" layout="column" layout-align="center start" layout-gt-sm="row" layout-align-gt-sm="space-between center">
        <div layout="row" layout-align="start center" class="name">
          {{#liquid-if (not (eq currentRouteName 'index'))}}
            {{#paper-button action=(route-action 'transitionTo' 'index') accent=true icon-button=true class="back-button"}}
              {{paper-icon 'arrow-back'}}
            {{/paper-button}}
          {{/liquid-if}}
          <h3>{{#link-to 'index'}}Profanus{{/link-to}}</h3>
        </div>
        <div>
        {{#paper-button accent=true action=(route-action 'transitionTo' 'recruitment')}}
          Recruitment
        {{/paper-button}}
        {{#paper-button accent=true action=(route-action 'transitionTo' 'info')}}
          Info
        {{/paper-button}}
        </div>
      </div>
    </div>
  {{/paper-toolbar}}
  {{#paper-content class="main-content"}}
  <div class="content-wrapper">

    <div flex layout="column" layout-gt-sm="row" layout-align="space-between stretch">
      <div flex>
        {{liquid-outlet}}
      </div>

      <div layout="column" flex-sm flex-xs>
        <div flex-xs flex-sm>
        {{#paper-card class="raid-logs animated fadeIn"}}
          {{#paper-card-title}}
            <h3>Raid logs</h3>
          {{/paper-card-title}}
          {{#paper-card-content}}
            <div layout-sm="row" layout-align="space-around center">
            {{#each model as |log|}}
              {{raid-logs log=log class="raid-log"}}
            {{else}}
              No logs are available.
            {{/each}}
            </div>
          {{/paper-card-content}}
        {{/paper-card}}
        </div>
        {{#paper-card class="wow-progress animated fadeIn"}}
          {{#paper-card-content}}
          <div flex layout="row" layout-align="center center">
            <a href="http://www.wowprogress.com/guild/eu/ragnaros/Profanus" target="_BLANK">
              <img alt="WoW Guild Rankings" src="http://wowprogress.com/guild_img/829204/out/type.site" border="0"/>
            </a>
          </div>
          {{/paper-card-content}}
        {{/paper-card}}
      </div>
    </div>
  </div>
  {{/paper-content}}
</div>